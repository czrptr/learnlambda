{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"linux": {
				"command": "node index.js",
				"options": {
					"cwd": "${workspaceRoot}/out/"
				}
			},
			"problemMatcher": []
		},
		{
            "label": "Clean output",
			"type": "shell",
			"linux": {
				"command": "rm -rf ${workspaceRoot}/out/*"
			},
			"problemMatcher": []
		}
    ]
}