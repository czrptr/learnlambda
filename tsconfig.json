{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"types": [
			"node",
			"jest",
			"codemirror"
		],
		"lib": [
			"DOM",
			"DOM.Iterable",
		],
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"outDir": "./dist/",
		"removeComments": true,
		"sourceMap": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./src/tests"
	]
}