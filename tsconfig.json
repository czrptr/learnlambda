{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"types": [
			"node",
			"jest"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"moduleResolution": "node",
		"outDir": "./js",
		"inlineSourceMap": true,
		"removeComments": true,
		"downlevelIteration": true,
		"strict": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/index.ts"
	]
}